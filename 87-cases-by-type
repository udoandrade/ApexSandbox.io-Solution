public Map<String, List<Case>> casesByType(List<Case> cases) {
    
    Map<String, List<Case>> casosPorTipo = new Map<String, List<Case>>();

    for (Case caso : cases) {
        List<String> caseNames;
        if(!casosPorTipo.containsKey(caso.Type)) {
            casosPorTipo.put(caso.Type, caso);
        }else {
            caseNames.addAll(casosPorTipo.get(caso.Type));
            casosPorTipo.put(caso.Type, caseNames);
        }
    }

    return casosPorTipo;
}