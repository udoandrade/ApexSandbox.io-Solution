public Map<String, List<Case>> casesByType(List<Case> cases) {
    
    Map<String, List<Case>> casosPorTipo = new Map<String, List<Case>>();

    for (Case caso : cases) {
        List<Case> casos;
        if (caso.Type != null) {
            if (!casosPorTipo.containsKey(caso.Type)) {
                casos.add(caso);
                casosPorTipo.put(caso.Type, casos);
            }else {
                casosPorTipo.get(caso.Type).add(caso);
                /* casos.addAll(casosPorTipo.get(caso.Type));
                casosPorTipo.put(caso.Type, casos); */
            }
        }
    }

    return casosPorTipo;
}